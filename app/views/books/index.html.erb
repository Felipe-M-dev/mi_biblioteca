<p id="notice"><%= notice %></p>

<%= button_to "Library", root_path, :id => "library-btn", :class => "btn btn-light mb-2 fs-1", :method => :get %>

<div class="row mt-5 mb-2">
    <div class="col-md-3">
      <%= search_form_for @q do |f| %>
        <div class="form-group">
          <%= f.label :state_eq, "State", class:"mb-1" %>
          <%= f.select :state_eq, options_for_select(Book.states, @q.state_eq ),{},{class:"form-control"}%>
        </div>
        <%= f.submit"Search", class:"btn btn-primary mt-2" %>
      <%end%>
      <%= button_to "New Book", new_book_path, :id => "new-book-btn", :class => "btn btn-primary my-2", :method => :get %>
</div>

<%= paginate @books %>

<div class="row">
  <table>
    <thead>
      <tr>
        <th><%= sort_link(@q, :title, "Title (Click to sort)") %></th>
        <th>Author</th>
        <th>State</th>
        <th>Borrow date</th>
        <th>Return date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.state %></td>
          <td><%= book.borrow_date %></td>
          <td><%= book.return_date %></td>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<div>

<br>
